<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="itemTextColor">@android:color/black</item>
        <item name="buttonStyle">@style/ButtonLightTheme</item>
        <item name="editTextStyle">@style/EditTextLightTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorEdgeEffect">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/AlertDialogLightTheme</item>
        <item name="layout_background_color">@android:color/white</item>
        <item name="card_view_background_color">@android:color/white</item>
        <item name="toolbar_color">@color/colorPrimary</item>
        <item name="bottom_nav_color">@color/white</item>
        <item name="bottom_nav_item_icon_tint_active">@color/colorPrimary</item>
        <item name="bottom_nav_item_icon_tint_inactive">@android:color/darker_gray</item>
        <item name="fab_color">@color/colorPrimary</item>
        <item name="dialog_color">@color/colorPrimary</item>
        <item name="edit_text_background_tint">@color/colorPrimary</item>
        <item name="border_gray_solid_color">@android:color/white</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/deepDarkColor</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="buttonTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="buttonStyle">@style/ButtonDarkTheme</item>
        <item name="editTextStyle">@style/EditTextDarkTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorEdgeEffect">@android:color/white</item>
        <item name="alertDialogTheme">@style/AlertDialogDarkTheme</item>
        <item name="layout_background_color">@color/darkColor</item>
        <item name="card_view_background_color">@color/deepDarkColor</item>
        <item name="toolbar_color">@color/deepDarkColor</item>
        <item name="bottom_nav_color">@color/deepDarkColor</item>
        <item name="bottom_nav_item_icon_tint_active">@android:color/holo_blue_dark</item>
        <item name="bottom_nav_item_icon_tint_inactive">@android:color/darker_gray</item>
        <item name="fab_color">@android:color/holo_blue_dark</item>
        <item name="dialog_color">@color/darkColor</item>
        <item name="edit_text_background_tint">@android:color/white</item>
        <item name="border_gray_solid_color">@color/deepDarkColor</item>
    </style>

    <style name="LightTheme.SmallFont" parent="LightTheme">
        <item name="android:textSize">12sp</item>
        <item name="title_text_size">14sp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance12sp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance13sp</item>
    </style>

    <style name="LightTheme.MediumFont" parent="LightTheme">
        <item name="android:textSize">14sp</item>
        <item name="title_text_size">16sp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance14sp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance15sp</item>
    </style>

    <style name="LightTheme.LargeFont" parent="LightTheme">
        <item name="android:textSize">16sp</item>
        <item name="title_text_size">20sp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance16sp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance17sp</item>
    </style>

    <style name="DarkTheme.SmallFont" parent="DarkTheme">
        <item name="android:textSize">12sp</item>
        <item name="title_text_size">16sp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance12sp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance13sp</item>
    </style>

    <style name="DarkTheme.MediumFont" parent="DarkTheme">
        <item name="android:textSize">14sp</item>
        <item name="title_text_size">16sp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance14sp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance15sp</item>
    </style>

    <style name="DarkTheme.LargeFont" parent="DarkTheme">
        <item name="android:textSize">16sp</item>
        <item name="title_text_size">20sp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance16sp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance17sp</item>
    </style>

    <style name="AlertDialogLightTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AlertDialogDarkTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
         <item name="android:background">@color/deepDarkColor</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
    </style>

    <style name="EditTextLightTheme" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EditTextDarkTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonLightTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonDarkTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/deepDarkColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleTextAppearanceSmall" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleTextAppearanceMedium" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextAppearanceLarge" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance12sp" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance13sp" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance14sp" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance15sp" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance16sp" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance17sp" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>